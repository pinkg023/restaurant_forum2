
<div class="container middle">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @user.image, class: "img-responsive" %>
    </div>
    <div class="col-md-8">
      <h1><%= @user.name %></h1>
      <strong><%= @user.email %></strong>
      <br><br>
      <strong>Role:</strong> <%= @user.role %>
      <br>
      <strong>Introduce:</strong> <%= @user.intro %>     
      <br><br>
      <button type="button" class="btn btn-primary"><%= link_to('編輯用戶資料', edit_user_path(current_user)) %></button>     
    </div>
    <div class="clearfix"></div>
    <hr>
  </div>
</div>


